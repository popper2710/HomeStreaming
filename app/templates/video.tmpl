{{define "scripts"}}
    <link href="//vjs.zencdn.net/5.11/video-js.min.css" rel="stylesheet">
    <script src="//cdn.jsdelivr.net/hls.js/latest/hls.min.js"></script>
{{end}}
{{define "body"}}
<video id="video" class="video-js vjs-default-skin" width="640" height="480" controls autoplay>
    <script type="text/javascript">
        // 変換した動画ファイルを指定します。
        var source = '/resources/video/{{ .video_id }}.m3u8';
        var ua = navigator.userAgent;
        // スマホからのアクセスか、それ以外のアクセスかを判断
        if (ua.indexOf('iphone') > 0 || ua.indexOf('ipad') > 0 || ua.indexOf('android') > 0) {
            // ios
            document.write('<source src=' + source + ' type="application/x-mpegURL">');
            document.write('</video>');

        } else {
            // other
            document.write('</video>');
            if (Hls.isSupported()) {
                var video = document.getElementById('video');
                var hls = new Hls();
                hls.loadSource(source);
                hls.attachMedia(video);
                hls.on(Hls.Events.MANIFEST_PARSED, function () {
                    video.pause();
                });
            }
        }
    </script>
</video>
{{end}}
